---
import '../styles/Global.css';
import Layout from "../layouts/layout.astro";
---

 <Layout>
     <div class="relative min-h-screen bg-[#f5d330] overflow-hidden">
         <svg xmlns="http://www.w3.org/2000/svg"
              viewBox="0 0 120 120"
              role="img"
              aria-label="Enchufe macho diagonal"
              class="absolute top-0 left-0 w-[clamp(300px,100vw,540px)] h-auto text-[#0a0a0a]">
             data-type="power_plug" data-orientation="top_left">
             <title id="t2">Enchufe macho diagonal (top-left, overflow)</title>
             <desc id="d2">Cable recto 45° extendido más allá del lienzo.</desc>

             <!-- Cable largo: entra desde fuera y llega al conector -->
             <line x1="-120" y1="-120" x2="20" y2="20"
                   stroke="currentColor" stroke-width="6" stroke-linecap="round"/>

             <!-- Conector rotado y alineado a la diagonal -->
             <g transform="rotate(45 20 20)" fill="currentColor">
                 <rect x="14" y="10" width="6" height="20" rx="3"/>
                 <rect x="20" y="4"  width="28" height="32" rx="6"/>
                 <rect x="48" y="10" width="14" height="6" rx="1"/>
                 <rect x="48" y="24" width="14" height="6" rx="1"/>
             </g>
         </svg>
         <section class="flex flex-col justify-center items-center min-h-screen">
            <h1 class="text-9xl font-bold">404</h1>
         </section>
     </div>

 </Layout>